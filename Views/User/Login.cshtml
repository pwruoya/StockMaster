@{
    ViewData["HideTitleBar"] = true;
}
<div class="container-box">
    <h1>Login to StockMaster</h1>

    <form method="post" action="@Url.Action("Authenticate", "User")">
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Login</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger">@ViewBag.Error</div>
    }


    <a href="@Url.Action("Register", "User")" class="link">Don't have an account? Register here</a>
</div>

<style>
    body {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }

    .container-box {
        text-align: center;
        padding: 40px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(6px);
        width: 400px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: none;
        font-size: 14px;
    }

    .btn-login {
        background: #27ae60;
        color: white;
        width: 100%;
    }

        .btn-login:hover {
            background: #1e8449;
        }

    .link {
        display: block;
        margin-top: 15px;
        font-size: 14px;
        color: #ecf0f1;
        text-decoration: none;
    }

        .link:hover {
            text-decoration: underline;
        }
</style>
