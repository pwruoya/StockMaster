@model IEnumerable<StockMaster.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<h2>Your Inventory</h2>

<a class="btn btn-success mb-3" href="@Url.Action("Add", "Inventory")">Add New Item</a>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No inventory items found.</p>
}
