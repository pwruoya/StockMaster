@model IEnumerable<StockMaster.Models.Inventory>

@{
    ViewData["Title"] = "Inventory List";
}

<div class="container mt-4">
    <h2 class="text-center">Inventory List</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a class="btn btn-primary" href="@Url.Action("Add", "Inventory")">
            <i class="bi bi-plus-lg"></i> Add New Item
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <a class="btn btn-warning btn-sm me-2" href="@Url.Action("Edit", "Inventory", new { id = item.Id })">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Inventory", new { id = item.Id })" onclick="return confirm('Are you sure?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No inventory items found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
