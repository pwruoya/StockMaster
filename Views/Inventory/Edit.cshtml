@model StockMaster.Models.Inventory

@{
    ViewData["Title"] = "Edit Inventory Item";
}

<h2>Edit Inventory Item</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Edit" method="post" onsubmit="disableSubmitButton()">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" /> <!-- Ensuring UserId is not lost -->

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" class="form-control" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" id="submitBtn" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Inventory")">Cancel</a>
</form>

@section Scripts {
    <script>
        function disableSubmitButton() {
            document.getElementById("submitBtn").disabled = true;
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
