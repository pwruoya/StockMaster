@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<style>
    .dashboard-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .dashboard-title {
        color: #007bff;
    }

    .dashboard-btn {
        width: 100%;
        margin-top: 15px;
    }
</style>

<div class="dashboard-container">
    <h2 class="dashboard-title">Super Admin Dashboard</h2>
    <p>Welcome, Super Admin! You have full control over the system.</p>

    <a asp-controller="SuperAdmin" asp-action="ManageUsers" class="btn btn-success dashboard-btn">Manage Users</a>
    <a asp-controller="SuperAdmin" asp-action="ManageRoles" class="btn btn-info dashboard-btn">Manage Roles</a>

</div>
