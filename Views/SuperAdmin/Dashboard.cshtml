@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            background: #f4f4f4;
        }

        .sidebar {
            width: 250px;
            background: #2c3e50;
            color: white;
            position: fixed;
            height: 100vh;
            transition: transform 0.3s ease-in-out;
            padding-top: 20px;
            transform: translateX(0);
        }

        .sidebar h2 {
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 15px;
            text-align: center;
            cursor: pointer;
            transition: 0.3s;
        }

        .sidebar ul li:hover {
            background: #34495e;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: block;
        }

        .toggle-btn {
            position: absolute;
            top: 20px;
            left: 260px;
            background: #2c3e50;
            color: white;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: left 0.3s ease-in-out;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
            transition: margin-left 0.3s ease-in-out;
        }

        .dashboard-header {
            background: #3498db;
            padding: 20px;
            color: white;
            text-align: center;
            border-radius: 10px;
        }

        .stats {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            flex: 1;
            margin: 10px;
        }
canvas {
    max-width: 300px;  /* Set a fixed width */
    max-height: 300px; /* Set a fixed height */
    width: 100%;  /* Ensure it scales within */
    height: auto;
    display: block;
    margin: auto; /* Centering the chart */
}


        .collapsed {
            transform: translateX(-250px);
        }

        .collapsed + .toggle-btn {
            left: 10px;
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-250px);
            }

            .toggle-btn {
                left: 10px;
            }

            .content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <h2>Super Admin</h2>
        <ul>
            <li><a asp-controller="SuperAdmin" asp-action="Dashboard">Dashboard</a></li>
            <li><a asp-controller="SuperAdmin" asp-action="ManageUsers">Manage Users</a></li>
            <li><a asp-controller="SuperAdmin" asp-action="ManageInventory">Manage Inventory</a></li>
            <li>
                <form method="post" asp-controller="User" asp-action="Logout">
                    <button type="submit" class="btn btn-danger" style="width: 100%; border: none; padding: 15px; background: none; color: white; cursor: pointer; text-align: center;">Logout</button>
                </form>
            </li>
        </ul>
    </div>

    <div class="toggle-btn" id="toggleBtn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </div>

    <div class="content" id="content">
        <div class="dashboard-header">
            <h1>Welcome, Super Admin</h1>
        </div>

        <div class="stats">
            <div class="card">
                <h3>Total Users</h3>
                <p id="userCount">@ViewBag.TotalUsers</p>
            </div>
            <div class="card">
                <h3>Total Inventory Items</h3>
                <p id="inventoryCount">@ViewBag.TotalInventory</p>
            </div>
        </div>

        <div class="stats">
            <canvas id="userChart"></canvas>
            <canvas id="inventoryChart"></canvas>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            let sidebar = document.getElementById("sidebar");
            let content = document.getElementById("content");
            sidebar.classList.toggle("collapsed");
            content.style.marginLeft = sidebar.classList.contains("collapsed") ? "0" : "250px";
        }
let userChart = new Chart(document.getElementById('userChart'), {
    type: 'pie',
    data: {
        labels: ['Admins', 'Users'],
        datasets: [{
            data: [@ViewBag.AdminCount, @ViewBag.UserCount],
            backgroundColor: ['#3498db', '#e74c3c']
        }]
    },
    options: {
        responsive: false,  // Prevent automatic resizing
        maintainAspectRatio: false
    }
});

let inventoryChart = new Chart(document.getElementById('inventoryChart'), {
    type: 'pie',
    data: {
        labels: ['Items'],
        datasets: [{
            data: [@ViewBag.TotalInventory],
            backgroundColor: ['#2ecc71']
        }]
    },
    options: {
        responsive: false,  
        maintainAspectRatio: false
    }
});
    </script>
</body>
</html>
