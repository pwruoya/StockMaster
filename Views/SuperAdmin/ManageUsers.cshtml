@{
    ViewData["Title"] = "Manage Users";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .header, .footer {
        background: #007bff;
        color: white;
        padding: 15px;
        text-align: center;
        font-size: 18px;
        position: relative;
    }

    .logout-btn {
        position: absolute;
        right: 20px;
        top: 15px;
    }

    .container {
        max-width: 1000px;
        margin: 50px auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .title {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    .table th {
        background: #007bff;
        color: white;
    }

    .btn-action {
        padding: 5px 10px;
        font-size: 14px;
    }

    .footer {
        margin-top: 20px;
    }

    @media (max-width: 768px) {
        .container

    {
        width: 90%;
    }

    }
</style>

<div class="header">
    Super Admin Panel
    <a href="/Account/Logout" class="btn btn-danger logout-btn">Logout</a>
</div>

<div class="container">
    <h2 class="title">Manage Users</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.Role == "User")
                        {
                            <a href="/SuperAdmin/PromoteUser?id=@user.Id" class="btn btn-success btn-action">Promote to Admin</a>
                        }
                        else if (user.Role == "Admin")
                        {
                            <a href="/SuperAdmin/DemoteUser?id=@user.Id" class="btn btn-warning btn-action">Demote to User</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="footer">
    &copy; 2025 SmartStock - Super Admin Panel
</div>
