### manageusers.cshtml

@{
    ViewData["Title"] = "Manage Users";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header, .footer {
            background: #007bff;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 18px;
        }

        .table th {
            background: #007bff;
            color: white;
        }
    </style>
</head>
<body>
    <div class="header">
        Super Admin Panel
        <a href="/Account/Logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="container">
        <h2 class="text-primary text-center">Manage Users</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="/SuperAdmin/PromoteUser?id=@user.Id" class="btn btn-success">Promote</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="footer">
        &copy; 2025 SmartStock - Super Admin Panel
    </div>
</body>
</html>
