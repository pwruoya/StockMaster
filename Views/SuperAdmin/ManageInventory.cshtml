@model List<StockMaster.Models.InventoryViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Inventory</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            background: #f4f4f4;
        }

        .sidebar {
            width: 250px;
            background: #2c3e50;
            color: white;
            position: fixed;
            height: 100vh;
            transition: transform 0.3s ease-in-out;
            padding-top: 20px;
            transform: translateX(0);
        }

            .sidebar h2 {
                text-align: center;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 15px;
                    text-align: center;
                    cursor: pointer;
                    transition: 0.3s;
                }

                    .sidebar ul li:hover {
                        background: #34495e;
                    }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        display: block;
                    }

        .toggle-btn {
            position: absolute;
            top: 20px;
            left: 260px;
            background: #2c3e50;
            color: white;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: left 0.3s ease-in-out;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
            transition: margin-left 0.3s ease-in-out;
        }

        .dashboard-header {
            background: #3498db;
            padding: 20px;
            color: white;
            text-align: center;
            border-radius: 10px;
        }

        .collapsed {
            transform: translateX(-250px);
        }

            .collapsed + .toggle-btn {
                left: 10px;
            }

        .container {
            width: 90%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: left;
            }

            .table th {
                background: #3498db;
                color: white;
            }

        .btn {
            padding: 8px 12px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

        .btn-danger {
            background: #e74c3c;
            color: white;
        }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <h2>Super Admin</h2>
        <ul>
            <li><a asp-controller="SuperAdmin" asp-action="Dashboard">Dashboard</a></li>
            <li><a asp-controller="SuperAdmin" asp-action="ManageUsers">Manage Users</a></li>
            <li><a asp-controller="SuperAdmin" asp-action="ManageInventory">Manage Inventory</a></li>
        </ul>
    </div>
    <div class="content">
        <div class="dashboard-header">
            <h1>Manage Inventory</h1>
        </div>
        <div class="container">
            <h2>Inventory Items</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Owner</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@item.UserEmail</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
