@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-blue-600 text-white p-4 flex justify-between items-center">
        <h1 class="text-xl font-semibold">Admin Dashboard</h1>
        <a href="/Admin/Logout" class="bg-red-500 px-4 py-2 rounded hover:bg-red-700">Logout</a>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
        <!-- Feedback Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-500 text-white p-3 rounded mb-4">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-500 text-white p-3 rounded mb-4">
                @TempData["Error"]
            </div>
        }

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Total Users -->
            <div class="bg-white p-6 rounded shadow-md text-center">
                <h2 class="text-xl font-semibold">Total Users</h2>
                <p class="text-2xl font-bold text-blue-600">@ViewBag.TotalUsers</p>
            </div>

            <!-- Total Inventory -->
            <div class="bg-white p-6 rounded shadow-md text-center">
                <h2 class="text-xl font-semibold">Total Inventory</h2>
                <p class="text-2xl font-bold text-green-600">@ViewBag.TotalInventory</p>
            </div>

            <!-- Total Admins -->
            <div class="bg-white p-6 rounded shadow-md text-center">
                <h2 class="text-xl font-semibold">Total Admins</h2>
                <p class="text-2xl font-bold text-purple-600">@ViewBag.AdminCount</p>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="mt-8">
            <h2 class="text-lg font-semibold mb-4">Recent Users</h2>
            <table class="w-full bg-white shadow-md rounded">
                <thead class="bg-blue-600 text-white">
                    <tr>
                        <th class="py-2 px-4">Username</th>
                        <th class="py-2 px-4">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.RecentUsers != null && ViewBag.RecentUsers.Count > 0)
                    {
                        @foreach (var user in ViewBag.RecentUsers)
                        {
                            <tr class="border-b">
                                <td class="py-2 px-4">@user.UserName</td>
                                <td class="py-2 px-4">@user.Email</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="py-2 px-4 text-center text-gray-500">
                                No recent users available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
