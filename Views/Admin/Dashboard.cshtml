@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
            transition: width 0.3s;
        }

            .sidebar a {
                padding: 10px 20px;
                text-decoration: none;
                font-size: 16px;
                color: #fff;
                display: block;
                transition: background 0.3s;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

            .sidebar .toggle-btn {
                position: absolute;
                top: 10px;
                right: -35px;
                background: #343a40;
                color: white;
                border: none;
                padding: 5px 10px;
                cursor: pointer;
                border-radius: 5px;
            }

        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .collapsed .sidebar {
            width: 60px;
        }

        .collapsed .content {
            margin-left: 60px;
        }

        .collapsed .sidebar a span {
            display: none;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar {
            background-color: #343a40;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
        }

        .logout-btn {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

            .logout-btn:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="toggle-btn" onclick="toggleSidebar()">☰</button>
        <a href="@Url.Action("Dashboard", "Admin")"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
        <a href="@Url.Action("ManageUsers", "Admin")"><i class="fas fa-users"></i> <span>Manage Users</span></a>
        <a href="@Url.Action("ManageInventory", "Admin")"><i class="fas fa-box"></i> <span>Manage Inventory</span></a>
        <a href="@Url.Action("Logout", "User")" class="logout-btn"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
    </div>

    <!-- Main Content -->
    <div class="content" id="content">
        <nav class="navbar">
            <h4>Admin Dashboard</h4>
        </nav>

        <div class="container mt-4">
            <div class="row">
                <div class="col-md-4">
                    <div class="card p-3 text-center">
                        <h5>Total Users</h5>
                        <h2>150</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3 text-center">
                        <h5>Total Inventory Items</h5>
                        <h2>320</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3 text-center">
                        <h5>Pending Orders</h5>
                        <h2>45</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.body.classList.toggle('collapsed');
        }
    </script>

</body>
</html>
