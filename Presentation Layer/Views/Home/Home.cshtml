@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

    <!-- 🔹 Container -->
    <div class="max-w-5xl mx-auto p-6 bg-white shadow-xl rounded-lg mt-10">

        <!-- 🔹 Hero Section -->
        <section class="bg-gradient-to-r from-blue-700 to-indigo-600 text-white p-10 rounded-t-lg text-center">
            <h1 class="text-4xl font-bold mb-3">Welcome to StockMaster</h1>
            <p class="text-lg max-w-xl mx-auto mb-6">Manage your inventory efficiently and effortlessly.</p>
            <a href="@Url.Action("Index", "Inventory")"
               class="inline-block bg-white text-blue-700 font-semibold px-6 py-3 rounded-lg shadow hover:bg-gray-100 transition duration-200">
                Manage Inventory
            </a>
        </section>

        <!-- 🔹 Features Section -->
        <section class="grid gap-6 md:grid-cols-3 mt-10 p-4">
            <div class="bg-gray-50 rounded-lg p-6 shadow hover:shadow-lg transition transform hover:-translate-y-1">
                <h3 class="text-xl font-semibold text-blue-600 mb-2">📦 Easy Inventory Management</h3>
                <p class="text-gray-700 text-sm">Track and update your stock in real-time with a seamless interface.</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-6 shadow hover:shadow-lg transition transform hover:-translate-y-1">
                <h3 class="text-xl font-semibold text-green-600 mb-2">🔒 Secure & Reliable</h3>
                <p class="text-gray-700 text-sm">Industry-standard security ensures your data is protected.</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-6 shadow hover:shadow-lg transition transform hover:-translate-y-1">
                <h3 class="text-xl font-semibold text-purple-600 mb-2">📊 Analytics & Reports</h3>
                <p class="text-gray-700 text-sm">Gain insights with advanced reporting tools and analytics.</p>
            </div>
        </section>
    </div>

</body>
</html>
